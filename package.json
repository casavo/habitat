{
  "name": "@casavo/habitat",
  "description": "Casavo Design System Library",
  "private": false,
  "version": "1.0.0-beta.7",
  "type": "module",
  "license": "Apache-2.0",
  "homepage": "https://github.com/casavo/habitat",
  "author": "Casavo Developers <info@casavo.com>",
  "engines": {
    "node": "^18 || ^19 || ^20"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/style.css",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run storybook",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "build:components": "tsc && vite build ",
    "build:css": "vite build --config vite.css.config.ts",
    "postbuild:css": "mv dist-css/style.css storybook-static/habitat.css",
    "update:tokens": "style-dictionary build -c ./dictionary.config.json",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "@vanilla-extract/css": "1.14.1",
    "@vanilla-extract/recipes": "0.5.1",
    "react": "18.2.0",
    "react-aria-components": "1.0.0-beta.1",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "7.6.16",
    "@storybook/addon-interactions": "7.6.16",
    "@storybook/addon-links": "7.6.16",
    "@storybook/blocks": "7.6.16",
    "@storybook/react": "7.6.16",
    "@storybook/react-vite": "7.6.16",
    "@storybook/testing-library": "0.2.2",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.1",
    "@types/jest": "29.5.12",
    "@types/mocha": "10.0.6",
    "@types/react": "18.2.56",
    "@types/react-dom": "18.2.19",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "@vanilla-extract/vite-plugin": "4.0.4",
    "@vitejs/plugin-react": "4.2.1",
    "chromatic": "10.9.6",
    "eslint": "8.56.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.5",
    "eslint-plugin-sort-destructure-keys": "1.5.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-storybook": "0.8.0",
    "eslint-plugin-typescript-sort-keys": "3.1.0",
    "jsdom": "24.0.0",
    "prop-types": "15.8.1",
    "react-aria": "3.32.1",
    "react-aria-components": "1.0.0-beta.1",
    "storybook": "7.6.16",
    "style-dictionary": "3.9.2",
    "typescript": "5.3.3",
    "vite": "5.1.3",
    "vite-plugin-dts": "3.7.2",
    "vite-tsconfig-paths": "4.3.1",
    "vitest": "1.3.0"
  }
}